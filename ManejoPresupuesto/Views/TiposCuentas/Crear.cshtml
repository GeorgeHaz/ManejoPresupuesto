@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo de Cuenta";
}

<h1>Crear cuenta</h1>
<h5>Para crear las diversas cuentas a usar como transacciones den efectivo, tarjeta de creadito, depositos entre otros</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
    <div class="mb-3">
        <label  class="form-label" asp-for="Nombre"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}